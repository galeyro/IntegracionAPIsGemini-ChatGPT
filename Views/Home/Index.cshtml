@{
    ViewData["Title"] = "Home Page";
    
}

<div class="text-center">
    <h1 class="display-4">Chatbot Demo</h1>
    <form method="post" asp-action="Index">
        <div class="form-group">
            <label for="modelo">Selecciona el modelo:</label>
            <select class="form-control" id="modelo" name="modelo">
                <option value="Gemini">Gemini</option>
                <option value="OpenAI">OpenAI</option>
            </select>
        </div>
        <div class="form-group mt-3">
            <label for="prompt">Ingresa tu mensaje:</label>
            <textarea class="form-control" id="prompt" name="prompt" rows="4"></textarea>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Enviar</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
        </div>
    </form>
    <div class="mt-4">
        <strong>Respuesta:</strong>
        <p>@ViewBag.respuesta</p>
    </div>

</div>

