<script>
    // Función para hacer scroll automático al fondo del chat
    function scrollToBottom(id) {
        var el = document.getElementById(id);
        if (el) {
            el.scrollTop = el.scrollHeight;
        }
    }

    // Al cargar la página, hace scroll al fondo de ambos chats
    window.onload = function () {
        scrollToBottom('gemini-chat-window');
        scrollToBottom('openai-chat-window');
    };
</script>

<script>
    // Sincroniza el usuario seleccionado con los formularios de chat
    document.getElementById('userSelect').addEventListener('change', function () {
        var selectedUser = this.value;
        document.getElementById('usuarioInputGemini').value = selectedUser;
        document.getElementById('usuarioInputOpenAI').value = selectedUser;
    });

    // Inicializa los campos ocultos con el usuario seleccionado al cargar la página
    window.onload = function () {
        var selectedUser = document.getElementById('userSelect').value;
        document.getElementById('usuarioInputGemini').value = selectedUser;
        document.getElementById('usuarioInputOpenAI').value = selectedUser;
        scrollToBottom('gemini-chat-window');
        scrollToBottom('openai-chat-window');
    };
</script>