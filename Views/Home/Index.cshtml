@{
    ViewData["Title"] = "Home Page";
}
@using Markdig

<div>
    <div class="text-center">
        <!-- Título y subtítulo del proyecto -->
        <blockquote class="blockquote">
            <h1 class="mb-0">
                AriasGuevaraPinedaTorresBOT
            </h1>
            <p></p>
            <footer class="blockquote-footer">
                Conectados a las IA's usando <cite title="Source Title">API's y VibeCoding</cite>
            </footer>
        </blockquote>

        <section>
            <!-- Selector de usuario para el chat -->
            <div class="row mb-4">
                <div class="col-12 col-md-4 mx-auto">
                    <form id="userSelectForm" class="d-flex align-items-center" onsubmit="return false;">
                        <label for="userSelect" class="me-2 fw-bold">Usuario:</label>
                        <select class="form-select" id="userSelect" name="userSelect" aria-label="Selecciona usuario">
                            <option value="Galo">Galo</option>
                            <option value="Luis">Luis</option>
                            <option value="Javier">Javier</option>
                            <option value="Julian">Julian</option>
                        </select>
                    </form>
                </div>
            </div>

            <div class="container py-5">
                <!-- Ventanas de chat lado a lado -->
                <div class="row">
                    <!-- Ventana de chat Gemini -->
                    <div class="col-md-6 mb-4">
                        <h5 class="fw-bold mb-3 text-center">Chat Gemini</h5>
                        <div class="card shadow">
                            <div class="card-body" id="gemini-chat-window" style="height: 600px; overflow-y: auto; background: #f8f9fa;">
                                @{
                                    // Diccionario para asociar usuario con su imagen
                                    var userImages = new Dictionary<string, string>
                                    {
                                        { "Luis", "https://avatars.githubusercontent.com/u/146785935?v=4" },
                                        { "Julian", "https://avatars.githubusercontent.com/u/140036444?v=4" },
                                        { "Javier", "https://avatars.githubusercontent.com/u/184136904?v=4" },
                                        { "Galo", "https://avatars.githubusercontent.com/u/146301733?v=4" }
                                    };
                                }
                                <ul class="list-unstyled mb-0">
                                    @* Muestra los mensajes del chat Gemini *@
                                    @if (ViewBag.GeminiMessages != null)
                                    {
                                        @foreach (var message in ViewBag.GeminiMessages)
                                        {
                                            <div class="chat-message d-flex align-items-center mb-2">
                                                <!-- Imagen del usuario o del bot -->
                                                <img src="@(userImages.ContainsKey(message.User)
                                                    ? userImages[message.User]
                                                    : "https://upload.wikimedia.org/wikipedia/commons/thumb/f/f0/Google_Bard_logo.svg/1200px-Google_Bard_logo.svg.png")"
                                                     alt="@message.User"
                                                     class="chat-avatar me-2"
                                                     onerror="this.onerror=null;this.src='@Url.Content("~/images/default.png")';" />
                                                <div>
                                                    <!-- Nombre y hora del mensaje -->
                                                    <span class="fw-bold">@message.User</span>
                                                    <span class="chat-time small text-muted">@message.Time</span>
                                                    <!-- Contenido del mensaje (soporta Markdown) -->
                                                    <div class="bg-white rounded p-2 mt-1 shadow-sm">
                                                        @Html.Raw(Markdown.ToHtml(message.Text ?? ""))
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </ul>
                            </div>
                            <div class="card-footer bg-white">
                                <!-- Formulario para enviar mensaje a Gemini -->
                                <form method="post" asp-controller="Home" asp-action="Index" class="d-flex">
                                    <input type="hidden" name="modelo" value="Gemini" />
                                    <input type="hidden" name="usuario" id="usuarioInputGemini" value="Galo" />
                                    <input type="text" name="prompt" class="form-control me-2" placeholder="Escribe tu mensaje..." autocomplete="off" />
                                    <button type="submit" class="btn btn-primary">Enviar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Ventana de chat OpenAI -->
                    <div class="col-md-6 mb-4">
                        <h5 class="fw-bold mb-3 text-center">Chat OpenAI</h5>
                        <div class="card shadow">
                            <div class="card-body" id="openai-chat-window" style="height: 600px; overflow-y: auto; background: #f8f9fa;">
                                <ul class="list-unstyled mb-0">
                                    @* Muestra los mensajes del chat OpenAI *@
                                    @if (ViewBag.OpenAIMessages != null)
                                    {
                                        @foreach (var msg in ViewBag.OpenAIMessages)
                                        {
                                            <div class="chat-message d-flex align-items-center mb-2">
                                                <!-- Imagen del usuario o del bot -->
                                                <img src="@(userImages.ContainsKey(msg.User)
                                                    ? userImages[msg.User]
                                                    : "https://static-00.iconduck.com/assets.00/openai-icon-2021x2048-4rpe5x7n.png")"
                                                     alt="@msg.User"
                                                     class="chat-avatar me-2"
                                                     onerror="this.onerror=null;this.src='@Url.Content("~/images/default.png")';" />
                                                <div>
                                                    <!-- Nombre y hora del mensaje -->
                                                    <span class="fw-bold">@msg.User</span>
                                                    <span class="chat-time small text-muted">@msg.Time</span>
                                                    <!-- Contenido del mensaje (soporta Markdown) -->
                                                    <div class="bg-white rounded p-2 mt-1 shadow-sm">
                                                        @Html.Raw(Markdown.ToHtml(msg.Text ?? ""))
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </ul>
                            </div>
                            <div class="card-footer bg-white">
                                <!-- Formulario para enviar mensaje a OpenAI -->
                                <form method="post" asp-controller="Home" asp-action="Index" class="d-flex">
                                    <input type="hidden" name="modelo" value="OpenAI" />
                                    <input type="hidden" name="usuario" id="usuarioInputOpenAI" value="Galo" />
                                    <input type="text" name="prompt" class="form-control me-2" placeholder="Escribe tu mensaje..." autocomplete="off" />
                                    <button type="submit" class="btn btn-primary">Enviar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Lista de modelos utilizados -->
            <div class="row mb-4">
                <div class="col-12">
                    <h5 class="fw-bold mb-3 text-center">Modelos utilizados</h5>
                    <div class="card mx-auto" style="max-width: 500px;">
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex align-items-center">
                                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRsokcTZ4l3iLFFwBJf96pafY42rwG_w6jyNg&s" alt="Gemini" class="rounded-circle me-3" width="50">
                                    <div>
                                        <div class="fw-bold">Gemini</div>
                                        <div class="text-muted small">Chatbot de Google</div>
                                    </div>
                                </li>
                                <li class="list-group-item d-flex align-items-center">
                                    <img src="https://static-00.iconduck.com/assets.00/openai-icon-2021x2048-4rpe5x7n.png" alt="OpenAI" class="rounded-circle me-3" width="50">
                                    <div>
                                        <div class="fw-bold">OpenAI</div>
                                        <div class="text-muted small">Chatbot de OpenAI</div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

